{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationDir": "./dist",
		"declarationMap": false,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"outDir": "./dist",
		"stripInternal": true,
		"strict": true,
		"baseUrl": ".",
		"moduleResolution": "nodenext",
		"module": "NodeNext",
		"paths": {
			"@react-web-kit/*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
