{
  "name": "react-ds-kit-ui",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for the React DS Kit UI design system.",
  "keywords": [
    "react",
    "design-system",
    "ui",
    "components",
    "monorepo"
  ],
  "author": "Jhonatan Benavides",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jhonatan815/react-ds-kit-ui.git"
  },
  "homepage": "https://github.com/Jhonatan815/react-ds-kit-ui#readme",
  "bugs": {
    "url": "https://github.com/Jhonatan815/react-ds-kit-ui/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.19.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:docs": "pnpm --filter docs dev",
    "build": "turbo run build",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "lint:ci": "pnpm lint --max-warnings=0",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json,css}\"",
    "test:ui": "pnpm --filter @react-web-kit/ui test",
    "test:ui:coverage": "pnpm --filter @react-web-kit/ui test --coverage",
    "test:hooks": "pnpm --filter @react-web-kit/hooks test",
    "test:hooks:coverage": "pnpm --filter @react-web-kit/hooks test --coverage",
    "test:commit": "pnpm test:ui:coverage && pnpm test:hooks:coverage",
    "storybook:ui": "pnpm --filter @react-web-kit/ui storybook",
    "clean:project": "rm -rf node_modules packages/*/dist packages/*/node_modules apps/*/.next pnpm-lock.yaml",
    "publish:ui": "pnpm --filter @react-web-kit/ui publish --access public --no-git-checks",
    "release": "changeset publish",
    "check-types": "turbo run check-types",
    "full:ui": "pnpm run clean:project && pnpm install && pnpm run build && pnpm run test:ui",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.35.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@typescript-eslint/utils": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.7.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "turbo": "^2.5.6",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1"
  }
}
