{
  "name": "react-ds-kit-ui",
  "version": "independent",
  "description": "React Design Systems Components",
  "main": "index.js",
  "scripts": {
    "test": "vitest1",
    "test:coverage": "vitest run --coverage",
    "test:storybook": "test-storybook",
    "build": "turbo run build",
    "build:button": "turbo run build --filter=@react-web-kit/button",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "publish:button": "cd packages/button && rm -rf dist && pnpm build:turbo && npm publish --access public",
    "publish:theme-provider": "cd packages/theme-provider && rm -rf dist && pnpm build:turbo && npm publish --access public",
    "lint": "biome check --fix --unsafe",
    "clean:project": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -type d -prune -exec rm -rf '{}' + && rm -rf pnpm-lock.yaml coverage",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Jhonatan Benavides",
  "license": "ISC",
  "private": true,
  "workspaces": ["packages/*"],
  "packageManager": "pnpm@8.10.3",
  "devDependencies": {
    "@babel/preset-react": "^7.26.3",
    "@biomejs/biome": "1.9.4",
    "@chromatic-com/storybook": "^3.2.5",
    "@storybook/addon-actions": "^8.6.4",
    "@storybook/addon-coverage": "^1.0.5",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/addon-links": "^8.6.4",
    "@storybook/addon-onboarding": "^8.6.4",
    "@storybook/blocks": "^8.6.4",
    "@storybook/experimental-addon-test": "^8.6.4",
    "@storybook/react": "^8.6.4",
    "@storybook/react-vite": "^8.6.4",
    "@storybook/test": "^8.6.4",
    "@types/node": "^22.13.8",
    "@vitest/browser": "^3.0.7",
    "@vitest/coverage-v8": "^3.0.7",
    "husky": "^9.1.7",
    "playwright": "^1.50.1",
    "prettier": "3.5.3",
    "storybook": "^8.6.4",
    "turbo": "^2.4.4",
    "vitest": "^3.0.7"
  },
  "dependencies": {
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.3.4",
    "styled-components": "^6.1.15",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.3"
  }
}
