{
  "name": "react-ds-kit-ui",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:docs": "pnpm --filter docs dev",
    "check-types": "turbo run check-types",
    "clean:project": "rm -rf node_modules packages/*/dist apps/*/.next pnpm-lock.yaml",
    "changeset": "pnpm changesect",
    "version:packages": "pnpm changeset version",
    "publish:packages": "pnpm changeset publish",
    "storybook:ui": "pnpm --filter @react-web-kit/ui storybook",
    "test:ui": "pnpm --filter @react-web-kit/ui test",
    "full:ui": "pnpm run clean:project && pnpm install && pnpm run build && pnpm run test:ui",
    "release": "pnpm run changeset:add && pnpm run version:packages && pnpm run build && pnpm run publish:packages",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json,css}\""
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.35.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@typescript-eslint/utils": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "turbo": "^2.5.6",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=18"
  }
}
